{
  "name": "waterjet-simulator",
  "version": "1.0.0",
  "description": "Full-stack web application for waterjet cutting simulation",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && npm run build:frontend",
    "build:frontend": "react-scripts build",
    "start": "node dist/server.js",
    "dev": "concurrently \"npm run build:watch\" \"npm run start:server\"",
    "build:watch": "tsc --watch",
    "start:server": "nodemon dist/server.js",
    "test": "jest"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/node": "^20.4.5",
    "@types/multer": "^1.4.7",
    "@types/jest": "^29.5.3",
    "typescript": "^4.9.5",
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0",
    "jest": "^29.6.1",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "jsqr": "^1.4.0"
  }
}